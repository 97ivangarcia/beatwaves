<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".comprarcanciones">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="715dp"
        android:layout_height="429dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/skrillex" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="420dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.566"
        app:srcCompat="@drawable/esquinasredondas" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="178dp"
        android:layout_height="75dp"
        android:text="Skrillex"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/generoartista"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:backgroundTint="#FD00E4"
        android:text="Dubstep"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCanciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView28"
        app:layout_constraintBottom_toTopOf="@id/barrainferior"/>

    <ImageView
        android:id="@+id/barrainferior"
        android:layout_width="420dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.997"
        app:srcCompat="@drawable/esquinasredondas" />

    <Button
        android:id="@+id/botonvolver"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:backgroundTint="#3C3B3B"
        android:text="Volver"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.132"
        app:strokeColor="#FD00E4"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/anadircarrito"
        android:layout_width="147dp"
        android:layout_height="59dp"
        android:backgroundTint="#454545"
        android:text="AÃ±adir al carrito"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/barrainferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="@+id/barrainferior"
        app:layout_constraintVertical_bias="0.416"
        app:strokeColor="#FD00E4"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/comprar"
        android:layout_width="147dp"
        android:layout_height="59dp"
        android:backgroundTint="#FD00E4"
        android:text="Comprar"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/barrainferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toStartOf="@+id/barrainferior"
        app:layout_constraintVertical_bias="0.416"
        app:strokeColor="#454545"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>